= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  %h2 Sign in
  %p
    = f.text_field :email
    = f.label :email
  %p
    = f.password_field :password
    = f.label :password
  - if devise_mapping.rememberable?
    %p
      = f.check_box :remember_me
      = f.label :remember_me
  %p= f.submit "Sign in"
  = render :partial => "devise/shared/links"
